# =============================================================================
# .env.example – copie para .env e preencha os valores secretos
# =============================================================================

APP_NAME=Teste_PHP
APP_TIMEZONE=America/Sao_Paulo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8050
APP_PORT=8050

# ----- Banco de dados (MySQL) ------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql               # nome do serviço no compose.yaml (Sail)
DB_PORT=3307
DB_DATABASE=Teste_PHP
DB_USERNAME=sail
DB_PASSWORD=12345678
# Porta exposta no HOST (para ferramentas externas como TablePlus/DBeaver)
FORWARD_DB_PORT=3307

# ----- Redis -----------------------------------------------------------------
REDIS_HOST=redis            # nome do serviço no compose.yaml (Sail)
REDIS_PORT=6379
REDIS_PASSWORD=null         # Sail não configura senha no Redis por padrão
# Porta exposta no HOST
FORWARD_REDIS_PORT=6379

# ----- Cache / Session / Queue (todos via Redis) -----------------------------
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ----- Swagger ---------------------------------------------------------------
L5_SWAGGER_GENERATE_ALWAYS=true

# ----- OPcache (0 em produção para não revalidar arquivos) -------------------
OPCACHE_VALIDATE_TIMESTAMPS=1

# ----- Log -------------------------------------------------------------------
LOG_CHANNEL=stderr
LOG_LEVEL=debug
