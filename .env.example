# =============================================================================
# .env.example – copie para .env e preencha os valores secretos
# =============================================================================

APP_NAME=Teste_PHP
APP_TIMEZONE=America/Sao_Paulo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8050
APP_PORT=8050

# ----- Banco de dados (MySQL) ------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql               # nome do serviço no docker-compose
DB_PORT=3306
DB_DATABASE=Teste_PHP
DB_USERNAME=sail
DB_PASSWORD=12345678   # senha do usuário da aplicação
DB_ROOT_PASSWORD=12345678
# Porta exposta no HOST (para ferramentas externas como TablePlus)
DB_EXTERNAL_PORT=3306

# ----- Redis -----------------------------------------------------------------
REDIS_HOST=redis            # nome do serviço no docker-compose
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis
REDIS_EXTERNAL_PORT=6379

# ----- Cache / Session / Queue (todos via Redis) -----------------------------
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ----- OPcache (0 em produção para não revalidar arquivos) -------------------
OPCACHE_VALIDATE_TIMESTAMPS=1

# ----- Log -------------------------------------------------------------------
LOG_CHANNEL=stderr
LOG_LEVEL=debug
